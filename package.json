{
  "name": "spraygun-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.34.1",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jest": "^21.18.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.6.1",
    "eslint-plugin-react": "^7.1.0",
    "jest-junit": "^5.1.0",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-scripts": "1.1.4",
    "serve": "^9.4.0"
  },
  "scripts": {
    "start": "npm-run-all -p start:css start:js",
    "start:css": "npm-run-all build:css build:css:watch",
    "start:js": "react-scripts start",
    "build": "npm-run-all build:css build:js",
    "build:css": "node-sass-chokidar src/ -o src/",
    "build:css:watch": "node-sass-chokidar src/ -o src/ --watch --recursive",
    "build:js": "react-scripts build",
    "lint": "npm-run-all -c lint:*",
    "lint:eslint": "eslint 'src/**/*.{js,jsx}'",
    "pretest": "npm-run-all build:css",
    "test": "react-scripts test --env=jsdom",
    "pretest:coverage": "npm-run-all build:css",
    "test:coverage": "react-scripts test --env=jsdom --coverage",
    "eject": "react-scripts eject"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/registerServiceWorker.js"
    ]
  }
}
